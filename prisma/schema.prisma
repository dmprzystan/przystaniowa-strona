generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  login    String @unique
  password String
}

model Schedule {
  id    String @id @default(cuid())
  title String
  time  String
  day   String
}

model Newspaper {
  id    String   @id @default(cuid())
  title String
  date  DateTime
  url   String
}

model Trip {
  id             String           @id @default(cuid())
  title          String
  description    String
  dateStart      DateTime
  dateEnd        DateTime
  TripPhoto      TripPhoto[]
  TripLink       TripLink[]
  TripAttachment TripAttachment[]
}

model TripPhoto {
  id     String @id @default(cuid())
  url    String
  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id])
}

model TripLink {
  id     String @id @default(cuid())
  name   String
  url    String
  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id])
}

model TripAttachment {
  id     String @id @default(cuid())
  name   String
  url    String
  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id])
}

model Album {
  id          String       @id @default(cuid())
  title       String
  description String
  date        DateTime     @default(now())
  AlbumPhoto  AlbumPhoto[]
}

enum AlbumPhotoSize {
  NORMAL
  WIDE
  TALL
  BIG
}

model AlbumPhoto {
  id      String         @id @default(cuid())
  url     String
  preview String
  size    AlbumPhotoSize @default(NORMAL)
  albumId String
  album   Album          @relation(fields: [albumId], references: [id])
}
