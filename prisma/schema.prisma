generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum crdb_internal_region {
  aws_eu_central_1 @map("aws-eu-central-1")
}

model User {
  id       String @id @default(cuid())
  login    String @unique
  password String
}

model Config {
  id    String @id @default(cuid())
  key   String @unique
  value Json
}

model Schedule {
  id    String @id @default(cuid())
  title String
  time  String
  day   String
}

model Newspaper {
  id    String   @id @default(cuid())
  title String
  date  DateTime
  url   String
}

model ConfirmationLink {
  id        String   @id @default(cuid())
  title     String
  url       String
  createdAt DateTime @default(now())
}

model Trip {
  id             String           @id @default(cuid())
  title          String
  description    String // html
  dateStart      DateTime
  dateEnd        DateTime
  thumbnail      String           @default("")
  TripLink       TripLink[]
  TripAttachment TripAttachment[]
}

model TripLink {
  id     String @id @default(cuid())
  name   String
  url    String
  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id])
}

model TripAttachment {
  id     String @id @default(cuid())
  name   String
  url    String
  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id])
}

model Album {
  id          String       @id @default(cuid())
  title       String
  description String
  date        DateTime     @default(now())
  photos      AlbumPhoto[] @relation("Photos")
  thumbnail   AlbumPhoto?  @relation("Thumbnail")
}

enum AlbumPhotoSize {
  NORMAL
  WIDE
  TALL
  BIG
}

model AlbumPhoto {
  id   String         @id @default(cuid())
  url  String
  size AlbumPhotoSize @default(NORMAL)

  albumId String
  album   Album  @relation("Photos", fields: [albumId], references: [id])

  thumbnailForAlbumId String? @unique
  thumbnailForAlbum   Album?  @relation("Thumbnail", fields: [thumbnailForAlbumId], references: [id])
}
